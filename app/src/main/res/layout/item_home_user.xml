<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemHomeUserIdImagenUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:src="@color/colorPrimaryDark"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/itemHomeUserIdNombreUsuarioTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Nombre Usuario"
            android:textSize="15dp" />
    </LinearLayout>

        <ImageView
            android:id="@+id/itemHomeUserIdImagenPublicacion"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimaryDark"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/itemHomeUserIdNombreUsuarioComentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Nombre Usuario"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/itemHomeUserIdComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:text="Comentario de usuario "
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>


</LinearLayout>