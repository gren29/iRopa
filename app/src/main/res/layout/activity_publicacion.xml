<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Publicacion">

    <ImageButton
        android:id="@+id/activityPublicidadImagen"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/activityPublicidadProducto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/lato"
        android:hint="Nombre Producto"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/activityPublicidadDescripcion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/activityPublicidadCategoria"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Categoria"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activityPublicidadCosto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:hint="Costo"
            android:inputType="textPersonName"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/activityPublicidadEnviar"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="#00FCFCFC"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/enviar" />
    </LinearLayout>
</LinearLayout>